@import '../../../style/var.styl'

svg.hex
  transform translateZ(0)

  path
    transition 0.1s ease-in-out 0s
    stroke-width 1px
    fill $offBlack
    stroke $black
    pointer-events none

    &.side
      opacity 0


  &.active:hover, &:hover
    path
      opacity 0.5
      fill $red

      &.side
        opacity 0.4
        animation pulse 2s infinite


  &.active
    path
      fill $offWhite

      &.top
        opacity 0.5
      &.side
        opacity 0.3


  &.back
    path
      &.top
        opacity 1
        animation opac-top 6s cubic-bezier(0.68, -0.55, 0.265, 1.55)

      &.side
        opacity 0
        animation opac-side 6s cubic-bezier(0.68, -0.55, 0.265, 1.55)


  &.button
    cursor pointer
    path
      fill $red !important
      animation none !important
