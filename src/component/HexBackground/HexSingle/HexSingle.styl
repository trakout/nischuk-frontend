@keyframes pulse
  50%
    opacity 0.6

@keyframes opac-top
  0%
    fill $offWhite
    opacity 0.5
  90%
    fill $offWhite
    opacity 0.5
  100%
    fill $offBlack
    opacity 1

@keyframes opac-side
  0%
    fill $offWhite
    opacity 0.3
  90%
    fill $offWhite
    opacity 0.3
  100%
    fill $offBlack
    opacity 0


@keyframes wipe-in
  0%
    opacity 0
    transform translateZ(0) translateY(50%)
  100%
    opacity 1
    transform translateZ(0) translateY(0%)
